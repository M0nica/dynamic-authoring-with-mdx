{
  "name": "migrating-to-mdx",
  "version": "1.0.0",
  "description": "A presentation on migrating my blog to being MDX powered",
  "main": "index.js",
  "scripts": {
    "start": "mdx-deck deck.mdx",
    "prebuild": "rimraf dist",
    "build": "npm run build:site && npm run build:pdf",
    "build:site": "mdx-deck build deck.mdx",
    "build:pdf": "mdx-deck pdf deck.mdx",
    "postbuild": "cpy --parents \"public/**\" ./dist"
  },
  "author": "Monica Powell <github@aboutmonica.com>",
  "license": "MIT",
  "devDependencies": {
    "mdx-deck": "^4.1.1"
  },
  "dependencies": {
    "@emotion/core": "^10.0.34",
    "@mdx-deck/themes": "^4.1.0",
    "react": "^16.13.1"
  }
}
